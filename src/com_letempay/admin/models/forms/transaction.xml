<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

            <field name="id"
                   type="text"
                   class="readonly"
                   label="JGLOBAL_FIELD_ID_LABEL"
                   description ="JGLOBAL_FIELD_ID_DESC"
                   size="10"
                   default="0"
                   readonly="true" />

            <field name="state"
                   type="list"
                   label="JSTATUS"
                   description="JFIELD_PUBLISHED_DESC"
                   class="span12 small"
                   filter="intval"
                   size="1"
                   default="1">
                    <option value="1">
                            JPUBLISHED</option>
                    <option value="0">
                            JUNPUBLISHED</option>
                    <option value="2">
                            JARCHIVED</option>
                    <option value="-2">
                            JTRASHED</option>
            </field>

    </fieldset>
</form>
